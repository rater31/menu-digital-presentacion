---
import logo from '../assets/logo.jpeg';
import Image from 'astro/components/Image.astro';
---
<div class="container">

	<div class=" card  bg-[#141e26] ">
		<Image src={logo}, alt="Logo", class="w-auto h-100%  rounded-full relative z-2  "/>
		<div class="card2">
			<div class="circle"></div>
			<div class="circle"></div>
			<div class="circle"></div>
		</div>
	</div>
	

</div>

<style>
	.container{
		margin-top: 20px;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		height: 150px;
		width: 100%;
	
	}
	 .card2{
		width: 200px;
		height: 100%;
		position: relative;
		z-index: 1;
		
		
	} 

	.container .card{
		width: 90%;
		height: 100px;
		border-radius: 15px;
		position: relative;
		display: flex;
		justify-content: space-between;

		
	
	}
	 .circle{
		width: 50px;
		height: 50px;
		background-color: #24246e;
		border-radius: 50%;
		position: absolute;
		transition: all 0.1s ;
		cursor: pointer;
		
	}
	.circle:hover{
		transform: scale(1.2);
		
		
	} 
	.circle:hover::after{
		background-color: #88452b;
	}

	.circle::before{
		background-color: white;
		content: '';
		z-index: -2;
		width: 60px;
		height: 60px;
		border-radius: 50%;
		translate: -5px -5px;
		position: absolute;
	}
	.circle::after{
		/* background-color: rgba(0, 0, 255, 0); */
		background-image: url('../assets/logo.jpeg');
		background-size: cover;
		content: '';
		z-index: 2;
		width: 50px;
		height: 50px;
		border-radius: 50%;
		translate: 0px 0px;
		position: absolute;
		transition: all 0.3s;
	
	}
	
	.container .card .circle:nth-child(1){
		top: 80%;
	}	
	.container .card .circle:nth-child(2){
		
		top: 80%;
		left: 35%;
	}
	.container .card .circle:nth-child(3){
	
		top: 80%;
		left: 70%;
	}
